<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>全ユーザー一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>UserName</th>
            <th>email</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td></td>
            <td>
              <%= link_to admin_user_path(user.id) do %>
              <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <%= link_to '削除', admin_user_path(user), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: '本当に削除しますか？' } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Back', admin_dashboards_path %>
    </div>
  </div>
</div>
