<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2><i class="fa-solid fa-heart"></i>いいね一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
              <th></th>
              <th>Item</th>
              <th>Price</th>
              <th></th>
          </tr>
        </thead>
        <tbody>
          <% @likes.each do |like| %>
          <tr>
              <td></td>
              <td>
                <%= link_to post_path(like.post.id) do %>
                <%= like.post.item_name %>
                <% end %>
              </td>
              <td><%= like.post.price_i18n %></td>
              <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>