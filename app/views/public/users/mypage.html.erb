<div class="container">
  <h2>マイページ</h2>
  <div class="row">
    <div class="col-md-3">
      <h3>Myprofile</h3>
      <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>ひとこと</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <% if @user == current_user %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "text-secondary" %></p>
        <p><%= link_to "退会", user_path(@user.id), method: :delete, "data-confirm" => "本当に退会しますか？", class: "text-muted" %></p>
        <p><%= link_to "いいね一覧", post_likes_path(@posts), class: "text-black-50" %></p>

    </div>
    <div class="col-md-8">
      <h2>投稿一覧</h2>
      <table class="table table-hover border-dark">
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td></td>
            <td><%= link_to post.item_name, post_path(post.id) %></td>
            <td></td>
            <td>
              <%= link_to "Edit", edit_post_path(post.id), class: "btn btn-outline-dark btn-sm" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
