<main>
  <div class="container">
    <h1>マイページ</h1>
    <div class="row">

      <div class="col-md-3">
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
          </tbody>
        </table>
        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "text-secondary" %></p>
          <p><%= link_to "退会", user_path(@user.id), method: :delete, "data-confirm" => "本当に退会しますか？", class: "text-muted" %></p>
        <% end %>
      </div>

      <div class="col-md-8">
        <h2>投稿一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Item</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td></td>
              <td><%= link_to post.item_name, post_path(post.id) %></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</main>




