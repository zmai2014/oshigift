<h1>マイページ</h1>
<% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <p><%= link_to "退会", user_path(@user.id), method: :delete, "data-confirm" => "本当に退会しますか？" %></p>
<% end %>
<h2>投稿一覧</h2>
<% @posts.each do |post| %>
<div>
  <p>商品：<%= post.item_name %></p>
  <p>紹介文：<%= post.introduction %></p>
</div>
<% end %>

