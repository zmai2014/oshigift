<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 clo-lg-5 px-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">ユーザー名</label></br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名" %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">ひとこと</label></br>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
      </div>
      <div class="form-group">
        <label for="inputImage">プロフィール画像</label></br>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.submit "修正", class: "btn btn-outline-dark" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
